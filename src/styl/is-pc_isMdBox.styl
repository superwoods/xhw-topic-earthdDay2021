.is-pc.isMdBox
    body
        position relative
        background: orange
        width: 100%
        height: 100%

    .box
        display: none

    .iframeMdBox
        outline: none;
        border: none
        width: 400px
        height: (@width * 1334 / 750)
        // border: red 1px solid
        position: absolute
        top 50%
        left 50%
        transform: translate(-50%, -50%) //rotate(-90deg)
        z-index 2
        background-image: url(poster.jpg)
        background-position: center center
        background-repeat: no-repeat
        background-size: cover
        box-shadow: 0 0 10px rgba(#000, 0.3)
        border-radius: 6px
        overflow: hidden

    .footer
        color: #fff
        position: absolute
        bottom: 0
        line-height: 24px
        text-align: center
        width: 100%
        font-size: 18px
        padding-bottom: 20px
        z-index 1

        a
            color: #fff !important

.is-mobile
    .iframeMdBox
    .footer
        display: none
